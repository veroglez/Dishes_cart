{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": { "jest": true },
  "globals": {
    "document": true,
    "fetch": true,
    "webpack": true,
    "window": true,
    "localStorage": true
  },
  "rules": {
    "max-len": [1, 120, { "tabWidth": 2, "ignoreComments": true }],
    "react/jsx-filename-extension": "off",
    "import/no-cycle": "off",
    "no-underscore-dangle": ["error", { "allow": ["__REDUX_DEVTOOLS_EXTENSION__"] }]
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}